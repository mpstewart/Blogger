<!-- The new page and route is reserved for the form where you enter information for a new record -->

<h1>Create a New Article</h1>

<!-- Form design -->

<%= form_for(@article) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
