<h1>Articles tagged with "<%= @tag.name %>"</h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>

<br>
<br>
<br>
<br>

<p>
	<%= link_to "Delete This Tag", tag_path(@tag), method: :delete, data: {confirm: "Are you sure want to delete this tag?"} %> <br>
</p>
